{
    "name": "wichtelomat",
    "version": "1.0.0",
    "private": true,
    "description": "Wichtel-o-mat helps you with your Santa presents",
    "author": {
        "name": "Alexander Schenkel"
    },
    "scripts": {
        "docker-dev": "docker run --name wichtelomat --rm -ti -v $(pwd):/app -p 3000:3000 wichtelomat_web bash",
        "setup-dev": "npm install && npm run setup-frontend && npm run setup-backend",
        "setup-frontend": "cd frontend && npm install",
        "setup-backend": "cd backend && npm install",
        "watch-server": "cd backend && npm run watch",
        "serve-frontend": "cd frontend && npm run serve",
        "build-frontend": "cd frontend && npm run build",
        "watch-frontend": "cd frontend && npm run watch"
    },
    "dependencies": {},
    "eslintConfig": {
        "root": true,
        "env": {
            "es6": true,
            "node": true
        },
        "extends": [
            "plugin:prettier/recommended",
            "eslint:recommended",
            "prettier"
        ],
        "plugins": [
            "prettier"
        ],
        "parserOptions": {
            "parser": "babel-eslint"
        },
        "rules": {
            "prettier/prettier": [
                "error"
            ]
        }
    },
    "devDependencies": {
        "babel-eslint": "^10.1.0",
        "del": "^6.0.0",
        "eslint": "^7.13.0",
        "eslint-config-prettier": "^6.15.0",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-prettier-vue": "^2.1.1",
        "eslint-plugin-vue": "^7.1.0",
        "gulp": "^4.0.2",
        "gulp-run": "^1.7.1",
        "prettier": "^2.1.2"
    },
    "bugs": {
        "url": "https://github.com/bylexus/wichtelomat/issues"
    },
    "homepage": "https://github.com/bylexus/wichtelomat#readme",
    "keywords": [
        "wichtel",
        "wichteln",
        "wichtel-o-mat",
        "wichtelomat"
    ],
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/bylexus/wichtelomat.git"
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "singleQuote": true
    }
}
